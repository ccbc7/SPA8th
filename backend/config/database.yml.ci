default: &default
  adapter: mysql2
  encoding: utf8mb4
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: <%= ENV["MYSQL_USER"] || "myuser" %>
  password: <%= ENV["MYSQL_PASSWORD"] || "mypassword" %>
  host: <%= ENV["MYSQL_HOST"] || "127.0.0.1" %>

test:
  <<: *default
  database: <%= ENV["MYSQL_DATABASE"] || "mydb_test" %>
